<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:gravity="center" >

    <Button
        android:id="@+id/DialogButton0"
        style="@style/square_dialog_style2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="1" />

    <Button
        android:id="@+id/DialogButton1"
        style="@style/square_dialog_style2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/DialogButton0"
        android:text="2" />

    <Button
        android:id="@+id/DialogButton2"
        style="@style/square_dialog_style2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/DialogButton1"
        android:text="3" />

    <Button
        android:id="@+id/DialogButton3"
        style="@style/square_dialog_style2"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/DialogButton0"
        android:text="4" />

    <Button
        android:id="@+id/DialogButton4"
        style="@style/square_dialog_style2"
        android:layout_below="@id/DialogButton0"
        android:layout_toRightOf="@id/DialogButton3"
        android:text="5" />

    <Button
        android:id="@+id/DialogButton5"
        style="@style/square_dialog_style2"
        android:layout_below="@id/DialogButton0"
        android:layout_toRightOf="@id/DialogButton4"
        android:text="6" />

    <Button
        android:id="@+id/DialogButton6"
        style="@style/square_dialog_style2"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/DialogButton3"
        android:text="7" />

    <Button
        android:id="@+id/DialogButton7"
        style="@style/square_dialog_style2"
        android:layout_below="@id/DialogButton3"
        android:layout_toRightOf="@id/DialogButton6"
        android:text="8" />

    <Button
        android:id="@+id/DialogButton8"
        style="@style/square_dialog_style2"
        android:layout_below="@id/DialogButton3"
        android:layout_toRightOf="@id/DialogButton7"
        android:text="9" />

</RelativeLayout>